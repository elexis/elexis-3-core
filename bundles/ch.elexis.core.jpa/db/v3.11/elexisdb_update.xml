			</sqlCheck>
		</preConditions>
		<sql>
<![CDATA[
INSERT INTO USER_ROLE_JOINT (USER_ID, ID, DELETED) SELECT DISTINCT(USER_ID), 'medical-user', '0' FROM USER_ROLE_JOINT;
]]>
