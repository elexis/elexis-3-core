<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

   	<changeSet author="thomas" id="manual_update_EIGENLEISTUNGEN_codeclass">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="EIGENLEISTUNGEN" columnName="CODECLASS" />
			</not>
		</preConditions>
		<addColumn tableName="EIGENLEISTUNGEN">
			<column name="CODECLASS" type="VARCHAR(20)"/>
		</addColumn>
	</changeSet>

	<changeSet author="thomas" id="manual_update_artikel_fixmigelids">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="ARTIKEL"/>
		</preConditions>
		<sql>
<![CDATA[
UPDATE ARTIKEL SET ID = REPLACE(ID, ' ', '') WHERE Typ = 'MiGeL';
]]>
	    </sql>
	</changeSet>

</databaseChangeLog>